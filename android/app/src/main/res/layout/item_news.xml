<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_news_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


   >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.lucasurbas.listitemview.ListItemView
        android:id="@+id/list_item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liv_title="title"
        app:liv_subtitle="subtitle"
        app:liv_icon="@drawable/ic_mailbox2"
        app:liv_menu="@menu/multiple_action_menu"
        app:liv_multiline="false"
        app:liv_displayMode="avatar"
       />
</LinearLayout>