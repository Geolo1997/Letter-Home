<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <team.dorm301.letterhome.ui.ToolbarLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="70dp"/>

<!--<磨砂头部实现> -->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/h_back"
                android:layout_width="match_parent"
                android:layout_height="200dp" android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>
        <ImageView
                android:id="@+id/h_head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true" />
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/h_back"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">
            <ImageView
                    android:id="@+id/user_line"
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerHorizontal="true"
                    android:background="#f4f0f0"/>
            <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/user_line"
                    android:textSize="17sp"
                    android:textColor="#f4f0f0"
                    android:text="张三"/>
            <TextView
                    android:id="@+id/user_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textSize="17sp"
                    android:textColor="#f4f0f0"
                    android:layout_toRightOf="@id/user_line"
                    android:text="182****5882"/>
        </RelativeLayout>
    </RelativeLayout>
 <!--<修改个人信息>-->
    <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <!--<昵称修改>-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="140px"
                    android:layout_height="140px"
                    android:layout_gravity="center"
                    android:src="@drawable/change_name"/>
            <EditText
                    android:id="@+id/et_change_name"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="abc"
                    android:layout_gravity="center"/>
        </LinearLayout>
        <!--<性别修改>-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="140px"
                    android:layout_height="140px"
                    android:layout_gravity="center"
                    android:src="@drawable/change_sex"/>
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"
                    android:textSize="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"/>
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"
                    android:textSize="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"/>
        </LinearLayout>
        <!--<手机号修改>-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="140px"
                    android:layout_height="140px"
                    android:layout_gravity="center"
                    android:src="@drawable/change_phonenumber"/>
            <EditText
                    android:id="@+id/et_change_phone_number"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="abc"
                    android:layout_gravity="center"/>
        </LinearLayout>
        <!--<邮箱修改>-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="140px"
                    android:layout_height="140px"
                    android:layout_gravity="center"
                    android:src="@drawable/change_mailbox"/>
            <EditText
                    android:id="@+id/et_change_mailbox_number"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="abc"
                    android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
